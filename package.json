{
  "name": "activistchecklist",
  "version": "1.0.0",
  "description": "ActivistChecklist.org",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"API,PROXY,NEXT\" -c \"blue,yellow,green\" \"NODE_NO_WARNINGS=1 yarn api:dev\" \"NODE_NO_WARNINGS=1 local-ssl-proxy --source 3001 --target 3000\" \"yarn next dev\"",
    "next:dev": "next dev",
    "prestoryblockexport": "mkdir -p content out/images",
    "storyblockexportimages": "NODE_OPTIONS='--experimental-vm-modules' node scripts/export-stroyblok.mjs  --yaml --mode images --images ./out/images --verbose",
    "storyblockexportcontent": "NODE_OPTIONS='--experimental-vm-modules' node scripts/export-stroyblok.mjs  --yaml --mode content --content ./content --verbose",
    "build": "NEXT_TELEMETRY_DISABLED=1 next build",
    "postbuild": "if [ \"$VERCEL\" != \"1\" ]; then yarn storyblockexportimages; fi && next-sitemap && yarn rss && yarn index && if [ \"$BUILD_MODE\" = \"static\" ]; then cp public/.htaccess out/.htaccess; fi && if [ \"$VERCEL\" != \"1\" ]; then yarn fetch-news -q && if [ \"$BUILD_MODE\" = \"static\" ]; then mkdir -p out/files && cp -r public/files/news out/files/ 2>/dev/null || true; fi; fi && yarn buildbackup",
    "rss": "node scripts/generate-rss.mjs",
    "index": "NODE_ENV=${NODE_ENV} bash scripts/build-search-index.sh",
    "buildstatic": "BUILD_MODE=static yarn build && yarn checkbuild && yarn check-links",
    "checkbuild": "node scripts/check-build.mjs",
    "serve": "npx serve out",
    "buildbackup": "node scripts/build-backup.js",
    "start": "next start",
    "clean": "rm -rf .next build node_modules out && yarn cache clean && yarn install",
    "deploy": "yarn buildstatic && source .env && upload",
    "release": "yarn storyblockexportcontent && git checkout main && git commit -am \"Content update: $(date '+%Y-%m-%d %H:%M:%S')\" && git push && yarn deploy",
    "api:dev": "source .env && fastify start --watch --ignore-watch '.git node_modules out .next content public scripts utils styles pages config compontents' --log-level info --pretty-logs --port ${API_PORT:-4321} api/server.js",
    "api:start": "yarn run pm2 start ecosystem.config.js",
    "api:stop": "yarn run pm2 stop ac-api",
    "api:restart": "yarn run pm2 restart ac-api",
    "api:status": "yarn run pm2 status ac-api",
    "api:delete": "yarn run pm2 delete ac-api",
    "api:logs": "yarn run pm2 logs ac-api",
    "fetch-news": "node scripts/fetch-news-images.js",
    "og-images": "node scripts/generate-og-images.mjs",
    "og-images:clean": "node scripts/generate-og-images.mjs --clean",
    "metadata": "node scripts/metadata-cli.cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "check-links": "node scripts/check-links.mjs",
    "prepare": "sh scripts/install-hooks.sh"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.8",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@storyblok/react": "^5.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.4",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.563.0",
    "next": "^15.5.11",
    "next-themes": "^0.4.6",
    "openpgp": "^6.3.0",
    "pdf-lib": "^1.17.1",
    "pm2": "^6.0.14",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^10.0.2",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "storyblok-rich-text-react-renderer": "^3.0.1",
    "tailwind-merge": "^2.6.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "add": "^2.0.6",
    "autoprefixer": "^10.4.23",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "concurrently": "^9.2.1",
    "fastify-cli": "^7.4.1",
    "feed": "^5.2.0",
    "js-yaml": "^4.1.1",
    "local-ssl-proxy": "^2.0.5",
    "next-sitemap": "^4.2.3",
    "node-fetch": "^3.3.2",
    "open-graph-scraper": "^6.11.0",
    "pagefind": "^1.4.0",
    "postcss": "^8.5.6",
    "react-json-view": "^1.21.3",
    "satori": "^0.19.1",
    "sharp": "^0.34.5",
    "storyblok-backup": "^0.5.0",
    "storyblok-js-client": "^6.11.0",
    "tailwindcss": "^3.4.16",
    "vitest": "^4.0.18",
    "yarn": "^1.22.22"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
